# ============================================================
# Django Core Settings
# ============================================================
# Secret key for Django (required in production)
# Generate a new one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode (set to False in production)
DEBUG=True

# Comma-separated list of allowed hosts
# Example: ["teklora.co.ke","www.teklora.co.ke","127.0.0.1","localhost"]
ALLOWED_HOSTS=["teklora.co.ke","www.teklora.co.ke","127.0.0.1","localhost"]

# ============================================================
# Email Configuration
# ============================================================
# SMTP server for sending emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Email credentials (for Gmail, use App Password, not regular password)
# Leave empty if not using email functionality
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ============================================================
# Gemini API Configuration
# ============================================================
# Google Gemini API key (required)
GOOGLE_API_KEY=your-google-api-key-here

# ChromaDB persistence directory (for vector store)
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Gemini Model Configuration (Optional)
GEMINI_CHAT_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=models/embedding-001

# ============================================================
# LangSmith Configuration (Optional)
# ============================================================
# Enable/disable LangSmith tracing (set to true/false as lowercase string)
LANGSMITH_TRACING=true

# LangSmith API key (optional, but required if tracing is enabled)
# Get your API key from: https://smith.langchain.com/
LANGSMITH_API_KEY=your-langsmith-api-key-here

# LangSmith project name (defaults to "brantech-ai")
LANGSMITH_PROJECT=brantech-ai

# ============================================================
# Database Configuration
# ============================================================
# Database engine: "postgresql" or "sqlite3"
DATABASE_ENGINE=postgresql

# PostgreSQL Database Settings (required if DATABASE_ENGINE=postgresql)
DATABASE_NAME=brantech
DATABASE_USER=your-db-user
DATABASE_PASSWORD=your-db-password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_CONN_MAX_AGE=60